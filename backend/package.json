{
  "name": "EasyPadhai",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec babel-node src/index.js",
    "build": "mkdir -p build && ./node_modules/.bin/babel src --out-dir build --extensions \".js,.mjs\"",
    "serve": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "forever-start": "npm run build && forever start -c 'node' build/index.js",
    "forever-stop": "forever stopall",
    "forever-restart": "npm run build && forever stopall && forever start -c 'node' build/index.js",
    "forever-logs": "forever logs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
