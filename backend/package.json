    "js-arabic-reshaper": "^1.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.48",
    "mongoose": "^8.10.1",
    "mongoose-sequence": "^6.0.1",
